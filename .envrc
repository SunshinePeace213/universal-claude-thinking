# Auto-activate virtual environment for universal-claude-thinking-v2
if [[ -d ".venv" ]]; then
    source .venv/bin/activate
    echo "✓ Activated universal-claude-thinking-v2 virtual environment via direnv"
else
    echo "⚠️  No .venv found. Run 'uv venv --python 3.12' to create it."
fi

# Optional: Set project-specific environment variables
export PROJECT_NAME="universal-claude-thinking-v2"
export PYTHONPATH="${PWD}/src:${PYTHONPATH}"